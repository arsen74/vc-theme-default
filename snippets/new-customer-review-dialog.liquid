<script id="storefront.new-customer-review-dialog.tpl" type="text/ng-template">
  <div class="ajaxify-modal is-visible lists-creationDialog-wrapper" id="ajaxifyModal">
    <div class="ajaxifyCart--content" id="ajaxifyCart">
        <div class="lists-creationDialog-closeButtonWrapper">
            <button class="lists-creationDialog-closeButtonClearFix ajaxifyCart--close" title="{{ 'products.product.review.close_form' | t }}" ng-click="close()">{{ 'products.product.review.close_form' | t }}</button>
            <h1 class="h2">{{ 'products.product.review.add_new' |t }}</h1>
        </div>

        <div class="product-list-modal-wrapper">
            <div class="cart-row list-modal-row-fix">
                <div class="lists-creationDialog-inputWrapper grid-item text-left">
                    <div>
                        <label ng-model="dialogData.author"></label>
                    </div>
                </div>
            </div>
            <div class="cart-row list-modal-row-fix">
                <div class="lists-creationDialog-inputWrapper grid-item text-left">
                    <div>
                        <textarea placeholder="{{ 'products.product.review.comment_placeholder' |t }}" class="form-input lists-creationDialog-inputClearFix" ng-model="dialogData.content"></textarea>
                    </div>
                </div>
            </div>
            <div class="cart-row list-modal-row-fix">
                <div class="lists-creationDialog-inputWrapper grid-item text-left">
                    <div class="set-rating">
                        <input type="radio" id="rating-review-5" name="rating-review" value="5" ng-model="dialogData.rating" />
                        <label for="rating-review-5">5</label>
                        <input type="radio" id="rating-review-4" name="rating-review" value="4" ng-model="dialogData.rating"/>
                        <label for="rating-review-4">4</label>
                        <input type="radio" id="rating-review-3" name="rating-review" value="3" ng-model="dialogData.rating"/>
                        <label for="rating-review-3">3</label>
                        <input type="radio" id="rating-review-2" name="rating-review" value="2" ng-model="dialogData.rating"/>
                        <label for="rating-review-2">2</label>
                        <input type="radio" id="rating-review-1" name="rating-review" value="1" ng-model="dialogData.rating"/>
                        <label for="rating-review-1">1</label>
                    </div>
                </div>
            </div>
        
            <div class="product-list-modal-borders product-list-modal-borders">
                <div class="grid-item text-right">
                    <button ng-disabled="inProgress || !dialogData.content || (dialogData.rating == 0)" class="btn" ng-click="createReview()">
                        <span >{{ 'products.product.review.create' |t }}</span>
                    </button>
                    <button class="btn" ng-click="close()">
                        <span>{{ 'products.product.review.cancel' | t }}</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
  </div>
  <div id="ajaxifyCart-overlay"></div>
</script>
